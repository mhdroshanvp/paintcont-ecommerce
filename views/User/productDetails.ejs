<body>
  <div class="container mt-5">
    <div class="row">
      <!-- Product Images -->
      <div class="col-md-6">
        <div id="productImages" class="carousel slide" data-bs-ride="carousel">
          
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% for(let i=0 ;i<product.productPhoto.length;i++) { %>
                <% console.log(product.productPhoto[i]); %>
                <div class="carousel-item active">
                <img src="/userimages/<%=product.productPhoto[i]%>"  class="d-block " class="d-block ">
              </div>
              <% } %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev" >
              <span class="text-black" style="font-size: 30px; color: rgb(21, 22, 22);"  aria-hidden="true"><</span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span  style="font-size: 30px; color: rgb(21, 22, 22);"  aria-hidden="true">></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          
          
          
        </div>
      </div>
      <!-- Product Description -->
      <div class="col-md-6">
        <h2>
          <%= product.productName %>
        </h2>
        <p class="text-muted">Category: <%= product.paintCategory %>
        </p>
        <h3 class="mt-4">Price: â‚¹<%= product.productPrice %>
        </h3>
        <p class="mt-4">Product Description:</p>
        <p>
          <%= product.productDescription %>
        </p>
        <button type="button" class="btn btn-primary mt-4" onclick="addToCart('<%= product._id %>')">Add toCart</button>
        <button type="button" class="btn btn-danger mt-4"><i class="fa fa-heart"></i></button>


      </div>
    </div>


    <script>
      // Your JavaScript code using the fetch API
      function addToCart(productId) {
        const requestData = { productId: productId };

        fetch(`/add-cart/${productId}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(requestData), // Send productId within an object
        })
          .then((response) => {
            // Handle the success response here (e.g., show a success message)
            window.location.href = '/cart'
          })
          .catch((error) => {
            console.error(error.message);
            alert('An error occurred while adding the product to the cart');
          });
      }

      /////////////////////////////////////////////////////////////////
    </script>


    <!-- Product Details Tabs -->
    <div class="row mt-5">
      <div class="col-md-12">
        <ul class="nav nav-tabs" id="productTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" id="product-details-tab" data-bs-toggle="tab" href="#product-details" role="tab"
              aria-controls="product-details" aria-selected="true">Product Details</a>
          </li>
        </ul>
        <div class="tab-content" id="productTabsContent">
          <div class="tab-pane fade" id="product-reviews" role="tabpanel" aria-labelledby="product-reviews-tab">
            <!-- Display product reviews here -->
            <p>Customer reviews will be shown here...</p>
          </div>
          <!-- Add more tab content as needed -->
        </div>
      </div>
    </div>
  </div>
