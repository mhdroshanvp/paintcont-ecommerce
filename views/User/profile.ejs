    <div class="container mt-5">
        <div class="row">
            <!-- User Address Section (Left Side) -->
            <div class="col-md-6">
                <div class="user-address-container">
                    <div class="address">
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <!-- <a href="/profile" class="btn btn-outline-primary">My Profile</a> -->
                            <a href="/orders" class="btn btn-outline-primary"><i class="fas fa-shopping-bag"></i>
                            </a>
                            <a href="/profile/wallet" class="btn btn-outline-primary"><i class="fas fa-wallet"></i>
                            </a>
                        </div>
                        <h2>User Address</h2>
                        <hr>
                        <div class="form-group">
                            <form action="#" method="POST" enctype="multipart/form-data">
                                <div class="container">
                                    <div class="row">
                                        <% for (let i=0; i < user.address.length; i++) { %>
                                            <div class="address-container">
                                                <p><strong>Address <%= i + 1 %>:</strong></p>
                                                <p>
                                                    <%= user.address[i].city %>, <%= user.address[i].state %>, Pincode -
                                                            <%= user.address[i].pincode %>
                                                </p>
                                                <p>
                                                    <%= user.address[i].areaAndstreet %>
                                                </p>
                                            </div>
                                            <div class="d-flex justify-content-around w-25 mt-2 mb-2">
                                            <a href="/profile/edit_address?index=<%=i%>"
                                                class="btn btn-warning   "><i class="fas fa-pencil-alt"></i></a>
                                                
                                                <a type="button" class="btn btn-danger "
                                                onclick="deleteAddress('<%= user.address[i]._id %>')"><i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                            <% } %>
                                            
                                    </div>
                                </div>
                                <br>
                                <a href="/profile/add_address" class="btn btn-dark"><i class="fas fa-plus"></i>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Profile Section (Right Side) -->
            <div class="col-md-6">
                <div class="user-profile-container">
                    <h2>User Personal Info</h2>
                    <hr>
                    <!-- User Information Fields -->
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" disabled value="<%= user.name %>">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" disabled value="<%= user.email %>">
                    </div>
                    <div class="mb-3">
                        <label for="number" class="form-label">Number</label>
                        <input type="text" class="form-control" id="number" disabled value="<%= user.phone %>">
                    </div>

                    <!-- Edit Personal Information Button -->
                    <a href="/profile/edit_personal" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></a>
                   

                </div>

            </div>
        </div>

        <!-- Add Address Modal -->
        <div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog" aria-labelledby="addAddressModalLabel"
            aria-hidden="true">
            <!-- Modal content goes here -->
        </div>


        <!-- Add Address Modal -->
        <div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog" aria-labelledby="addAddressModalLabel"
            aria-hidden="true">
            <!-- Modal content goes here -->
        </div>


            <script>


        function deleteAddress(addressId) {
            if (confirm("Are you sure you want to delete this address?")) {
                fetch(`/profile/edit_address/dltAddress?addressId=${addressId}`, {
                    method: 'DELETE',
                })
                    .then((response) => {
                        if (response.ok) {
                            console.log(`Address ${addressId} has been deleted.`);
                            window.location.reload();
                        } else {
                            console.error(`Failed to delete address ${addressId}.`);
                        }
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                    });
            }
        }


    </script>



