                                        <tr>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% console.log(user.wallet,"bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"); %>
                                        <% user.wallet.transactions.forEach(transaction => { %>
                                            <tr>
                                                <td><%= transaction.date.toDateString() %></td>
                                                <td><%= transaction.amount %></td>
                                                <td><%= transaction.status ? 'CREDIT' : 'DEBIT' %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                                
