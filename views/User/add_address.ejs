                                        <option value="Bihar">Bihar</option>
                                        <option value="Chandhigarh">Chandhigarh</option>
                                        <option value="Chattisgarh">Chattisgarh</option>
                                        <option value="Delhi">Delhi</option>
                                        <option value="other">other</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- city -->
                                <div class="form-group">
                                    <label for="pincode" class="form-label">city</label>
                                    <input type="text" class="form-control" id="city" name="city" placeholder="city">
                                </div>
                                <!-- area and street -->
                                <div class="form-group">
                                    <label for="pincode" class="form-label">Address(area and street)</label>
                                    <input type="text" class="form-control" id="areaAndstreet" name="areaAndstreet"
                                        placeholder="308 Ryder Forest Apt. 915,Port Lilianton">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success mt-4 ml-3">Add Address</button>
