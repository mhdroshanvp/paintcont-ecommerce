    <main id="site-main">

        <div class="container">
            <!-- Order History Table -->

            <div class="table-responsive">

              <table class="table table-bordered table-striped order-table">
                <thead class="thead-dark">
                  <tr>
                    <th>NO</th>
                    <th>DATE</th>
                    <th>PRIZE</th>
                    <th>STATUS</th>
                    <th>NAME</th>
                    <th>PRODUCTS</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (orderData.length > 0) { %>
                    <% for (let orderIndex = 0; orderIndex < orderData.length; orderIndex++) { %>
                      <% const order = orderData[orderIndex]; %>
                      <% if (order.productDetails && order.productDetails.length > 0) { %>
                        <% order.productDetails.forEach((product, productIndex) => { %>
                          <tr>
                            <!-- Display order-related information only in the first row -->
                            <% if (productIndex === 0) { %>
                              <td rowspan="<%= order.productDetails.length %>">
                                <%= orderIndex + 1 %>
                              </td>
                              <td rowspan="<%= order.productDetails.length %>">
                                <%= order.orderDate.toLocaleDateString() %>
                                <br>
                                <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modalorder<%= order._id %>">Details</button>
                              </td>
                              <!-- Display the total order price only in the first row of each order -->
                              <td rowspan="<%= order.productDetails.length %>">
                                â‚¹<%= order.totalAmount %> <!-- Display the total order price -->
                              </td>
                              <td rowspan="<%= order.productDetails.length %>">
                                <%= order.status %>
                              </td>
                              <!-- Show the cancel button only in the first row of each order -->
                              <td rowspan="<%= order.productDetails.length %>">
                                <button class="btn btn-danger " onclick="event.preventDefault(); cancelOrder('<%= order._id %>')" >Cancel</button>
                              </td>
                            <% } %>
                            <td>
                              <!-- Product image -->
                              <%= product.productName %> (<%= order.products[0].qnty %>)
                            </td>
                          </tr>
                          <!-- Add modal code for each product here -->
                          <!-- /////////////////////////////////////////////////////////////////// -->
                          <div class="modal fade" id="modalorder<%= order._id %>" tabindex="-1" aria-labelledby="modalCartLabel" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <!--Header-->
                                <div class="modal-header">
                                  <h4 class="modal-title" id="modalCartLabel">Order Details</h4>
                                  <button type="button" class="btn h-25" data-bs-dismiss="modal" aria-label="Close">x</button>
                                </div>
                                <!--Body-->
                                <div class="modal-body">
                                  <span data-bs-toggle="modal" data-bs-target="#modalCart"><img src="/userimages/<%= order.productDetails[productIndex].productPhoto %>" alt="Product Image"
                                      class="img-fluid" width="70px"></span>
                                  <p>order id:<%= order._id %></p>
                                  <p>product name : <%= product.productName %></p>
                                  <p>product prize : <%= product.productPrice %></p>
                                  <p>product color : <%= product.paintColor %></p>
                                  <p>product quantity : <%= product.paintQuantity %></p>
                                  <p>product category : <%= product.paintCategory %></p>
                                  <p> USER ADDRESS : <%= order.address.city %>,<%= order.address.state %>,<%= order.address.areaAndstreet %>,<%= order.address.pincode %></p>
                                </div>
                                <!--Footer-->
                                <div class="modal-footer text-center justify-content-center d-flex">
                                  <button class="btn btn-outline-success"><p>Status : <%= order.status %></p></button>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                      <% } %>
                    <% } %>
                  <% } %>
