    <div class="container mt-5">
        <h2>Edit Address</h2>
        <div class="row">

            <form action="/profile/edit_address" method="POST">
                <div class="container">
                    <div class="user-editAddress-container">
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Pincode -->
                                <div class="form-group">
                                    <label for="pincode" class="form-label">Pincode</label>
                                    <input min="0" required pattern="[0-9]*" inputmode="numeric" type="number" class="form-control" id="pincode" name="pincode"
                                        value="<%= userAddress.pincode %>">
                                </div>
                                <!-- City (Dropdown) -->
                                <div class="form-group">
                                    <label for="state" class="form-label">States</label>
                                    <select class="form-select" required id="States" name="State">
                                        <option value="<%= userAddress.state %>" selected><%= userAddress.state %></option>
                                        <option value="Andaman nicobar">Andaman nicobar</option>
                                        <option value="Andaman nicobar">Andhra pradhesh</option>
                                        <option value="Kerala">Kerala</option>
                                        <option value="Arunachal pradhesh">Arunachal pradhesh</option>
                                        <option value="Assam">Assam</option>
                                        <option value="Bihar">Bihar</option>
                                        <option value="Chandhigarh">Chandhigarh</option>
                                        <option value="Chattisgarh">Chattisgarh</option>
                                        <option value="Delhi">Delhi</option>
                                        <option value="other">other</option>
                                        <!-- Add more cities as needed -->
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="pincode" class="form-label">city</label>
                                    <input type="text" required class="form-control" id="city" name="city"
                                        value="<%= userAddress.city %>">
                                </div>
                                <div class="form-group">
                                    <label for="pincode" class="form-label">areaAndstreet</label>
                                    <input type="text" required class="form-control" id="areaAndstreet" name="areaAndstreet"
                                        value="<%= userAddress.areaAndstreet %>">
                                </div>
                                <input type="hidden" name="addressId" value="<%= userAddress._id %>">
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success mt-4 ml-3"><i class="fas fa-save"></i>
                </button>


                <a href="/profile/add_address" class="btn btn-primary mt-4 ml-3"><i class="fas fa-plus"></i>
                </a>
            </form>




        </div>
