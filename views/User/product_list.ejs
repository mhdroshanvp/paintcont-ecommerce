    <script>

        // Your JavaScript code using the fetch API
      function addToCart(productId) {
        const requestData = { productId: productId };

        fetch(`/add-cart/${productId}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(requestData), // Send productId within an object
        })
          .then((response) => {
            // Handle the success response here (e.g., show a success message)
            window.location.href = '/cart'
          })
          .catch((error) => {
            console.error(error.message);
            alert('An error occurred while adding the product to the cart');
          });
      }
